{% extends 'base.html.twig' %}

{% block title %}Pago index{% endblock %}

{% block body %}
    <h1>Pago index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comprobante</th>
                <th>Aprobado</th>
                <th>CreatedAt</th>
                <th>UdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pago in pagos %}
            <tr>
                <td>{{ pago.id }}</td>
                <td>{{ pago.comprobante }}</td>
                <td>{{ pago.aprobado ? 'Yes' : 'No' }}</td>
                <td>{{ pago.createdAt ? pago.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ pago.udatedAt ? pago.udatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('pago_show', {'id': pago.id}) }}">show</a>
                    <a href="{{ path('pago_edit', {'id': pago.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pago_new') }}">Create new</a>
{% endblock %}
